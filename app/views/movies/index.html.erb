
<%= link_to "Add a new movie", new_movie_path , { class: "btn btn-outline-dark font-weight-bold" }   %>


<div class="card-container my-5">

    <h2><strong>All Movies</strong></h2>
    <h5 class="mb-5">Choose the movies that you want.</h5>

  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-md-4">

        <div class="card-container cc-hover mb-4">
          <% if movie.image %>
         <%= image_tag movie.image, width: 100 %>
         <% end %>
          <div class="card-container-infos">
            <h2 class="text-left"><%= movie.title  %></h2>
            <h4 class="mt-3 text-justify"><%= movie.description %></h4>
          </div>

          <div class="container">
            <h4 class="mb-2"><%= movie.language %></h4>
            <%= link_to "CHECK THIS VERSION", movie_path(movie), { class: "btn btn-outline-dark font-weight-bold" } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
