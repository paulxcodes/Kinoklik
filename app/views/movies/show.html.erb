<div class="container my-5">
  <h2 class="mb-3">Selected Movie <strong><%= @movie.title  %></strong></h2>
  <div class="row">

    <div class="col-md-12">
      <div class="card-container">
        <%= image_tag @movie.movie_image, class: "card-container-img" %>
        <div class="card-container-infos">
        <div class="border-top border-dark m-4">
        </div>

          <h2 class="mt-3"><strong>What is it about?</strong></h2>
          <h3 class="m-3"><%= @movie.description %></h3>
        </div>
        <div class="border-top border-dark m-4">
        </div>
        <div class="text-center">
          <ul>
              <%= link_to "EDIT", edit_movie_path(@movie), { class: "btn btn-outline-dark" } %>
              <%= link_to "DELETE", movie_path(@movie), method: :delete, data: { confirm: "Are you sure you want to delete #{@movie.title}?" }, class: "btn btn-outline-danger" %>
          </ul>
        </div>
      </div>
      <div class="mt-5 text-right"><%= link_to "Go Back To The Other Movies", movies_path, { class: "btn btn-outline-dark font-weight-bold" }%></div>
  </div>
  </div>
</div>
