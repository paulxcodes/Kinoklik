<div class="container my-5">
  <h2 class="mb-4"><strong>Sign in.</strong> KinoKlik</h2>
  <div class="row">
    <div class="col-md-12">
      <div class="card-form">
        <div class="card-form-display">
        <h3 class="title"> Welcome to Kinoklik</h3>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-input">
              <%= f.input :email, required: false, autofocus: true, placeholder: "example@example.come", label:"Email Address", input_html: { autocomplete: "email" } %>
              <%= f.input :password, required: false, placeholder: "******", label:"Password", input_html: { autocomplete: "current-password" } %>
            </div>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
            <div class="form-actions text-center">
              <%= f.button :submit, "SIGN IN", class: "btn log-in" %>
            </div>
            <% end %>
          <div class="form-actions">
            <p class='login-link'>Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
          </div>
        </div>
      </div>
  </div>
</div>
